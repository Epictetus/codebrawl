%h2= @contest.name

= raw Kramdown::Document.new(@contest.description).to_html

- unless @contest.open?

  %h3 Entries

  = form_for [@contest, Vote.new] do |f|
    = render :partial => "entries/entry", :collection => @contest.entries, :locals => { :f => f }

    = f.submit 'Submit your votes' if logged_in?

- if @contest.open?
  - if @entry
    = render 'entries/form'
  - else
    = link_to [:new, @contest, :entry], :class => 'button' do
      %h3 Enter
