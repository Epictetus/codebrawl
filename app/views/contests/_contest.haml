%li{:id => dom_id(contest)}
  .description
    %h2= link_to contest.name, contest
    %p= contest.tagline

  .state
    %span= contest.state.capitalize
    %br
    - if contest.next_state_at
      = "#{distance_of_time_in_words(Time.now, contest.next_state_at, true)} left"
      %br
      = contest.next_state_at.strftime("%B %d %H:%M (UTC)")
  %hr
